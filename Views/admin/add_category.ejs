<%- include('../_layouts/header') %>

<h2 class="page-title">Add a category</h2>
<a href="/admin" class="btn btn-primary">Back to all pages</a>
<br /><br />

<form method="post" action="/categories/add_category">
  <div class="form-group">
    <label for="">Title</label>
    <input
      type="text"
      class="form-control"
      name="title"
      value="<%= title %>"
      placeholder="Title"
    />
  </div>

  <div class="form-group">
    <label for="">Slug</label>
    <input
      type="text"
      class="form-control"
      name="slug"
      value="<%= slug %>"
      placeholder="Slug"
    />
  </div>

  <button class="btn btn-default">Submit</button>
</form>

<%- include('../_layouts/footer') %>
