<%- include('../_layouts/header') %>

<h2 class="page-title">Add a Product</h2>
<a href="/products" class="btn btn-primary">Back to all Products</a>
<br /><br />

<form method="post" action="/admin/add_products" enctype="multipart/form-data">
  <div class="form-group">
    <label for="">Name</label>
    <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title" />
  </div>

  <div class="form-group">
    <label for="">Price for the product</label>
    <input type="text" class="form-control" name="slug" value="<%= price %>" placeholder="Price" />
  </div>
  <div class="form-group">
    <label for="">Categories</label>
    <select name="category" class="form-control">

      <%categories.forEach((cats)=>{  %>
      <option value="<% cats.slug %>"><%= cats.title %></option>

      <% })  %>


    </select>
  </div>

  <div class="form-group">
    <label for="">Description</label>
    <textarea name="content" class="form-control" id="ta" cols="30" rows="10" placeholder="Content">
<%= description %></textarea>
  </div>

  <div class="form-group">
    <label for="">Image</label>
    <input type="file" class="form-control" name="image" id='img'>
    <img src="" id="imgPreview">

  </div>






  <button class="btn btn-default">Submit</button>

</form>

<script>
  function readURL(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();

      reader.onload = function (e) {
        $("#imgPreview").attr('src', e.target.result).width(120).height(120);
      }

      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#img").change(function () {
    readURL(this);
  });
</script>

<%- include('../_layouts/footer') %>